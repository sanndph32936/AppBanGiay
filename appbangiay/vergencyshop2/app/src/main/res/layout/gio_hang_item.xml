<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutItemGioHang"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="25dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/eachCartItemIV"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/shirt" />

        <TextView
            android:id="@+id/tv_tensp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/eachCartItemIV"
            android:layout_marginStart="8dp"
            android:text="Tên sản phẩm"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tensp"
            android:layout_toEndOf="@+id/eachCartItemIV"
            android:layout_marginStart="8dp"
            android:text="Size"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp" />
        ////
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layout_cart"
            android:layout_below="@+id/tv_size"
            android:layout_toEndOf="@+id/eachCartItemIV"
            android:layout_marginStart="8dp"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/btnTruSoLuong_cart"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@color/dangnhap"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_sl"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@color/cancel"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnCongSoLuong_cart"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:background="@color/dangnhap"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>
        /////
//
<!--        <TextView-->
<!--            android:id="@+id/tv_sl"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_below="@+id/tv_size"-->
<!--            android:layout_toEndOf="@+id/eachCartItemIV"-->
<!--            android:layout_marginStart="8dp"-->
<!--            android:text="Số lượng: "-->
<!--            android:textColor="@color/black"-->
<!--            android:textSize="14sp"-->
<!--            android:textStyle="bold" />-->
///
        <TextView
            android:id="@+id/tv_giatien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_cart"
            android:layout_toEndOf="@+id/eachCartItemIV"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Tổng tiền"
            android:textColor="@color/gia"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/eachCartItemDeleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_delete_24" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
