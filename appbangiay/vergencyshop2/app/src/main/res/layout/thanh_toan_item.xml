<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150sp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgSanPhamThanhToan"
        android:src="@drawable/ngacnhien"
        android:padding="8dp"
        android:layout_width="140sp"
        android:layout_height="140sp"/>

    <RelativeLayout

        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/tvItemTenSanPhamThanhToan"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên"
            android:textStyle="bold"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/tvItemSizeSanPhamThanhToan"
            android:layout_below="@+id/tvItemTenSanPhamThanhToan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên"
            android:textStyle="bold"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tvItemGiaSanPhamThanhToan"
            android:layout_below="@+id/tvItemSizeSanPhamThanhToan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@color/gia"
            />

        <TextView
            android:id="@+id/tvItemSoLuongSanPhamThanhToan"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_below="@+id/tvItemGiaSanPhamThanhToan"
            android:layout_alignParentEnd="true"

            android:text="Tên"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvThanhToan"
           android:layout_below="@id/tvItemSoLuongSanPhamThanhToan"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiền: "
            android:textStyle="bold"
            android:textSize="17sp"
            />
        <TextView
            android:id="@+id/tvItemTongTienSanPhamThanhToan"
            android:layout_alignParentBottom="false"
            android:layout_below="@id/tvItemSoLuongSanPhamThanhToan"
            android:layout_toRightOf="@+id/tvThanhToan"
            android:textColor="@color/gia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên"
            android:textStyle="bold"
            android:textSize="17sp"

            />


    </RelativeLayout>


</LinearLayout>